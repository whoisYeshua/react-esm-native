{
  "schema": "https://rickandmortyapi.com/graphql",
  "documents": "src/**/*.{ts,tsx}",
  "extensions": {
    "codegen": {
      "overwrite": true,
      "generates": {
        "./codegen-gql-types.ts": {
          "plugins": ["typescript", "typescript-operations"],
          "config": {
            "avoidOptionals": true,
            "enumsAsTypes": true,
            "maybeValue": "T",
            "skipTypename": true
          }
        }
      }
    }
  }
}
